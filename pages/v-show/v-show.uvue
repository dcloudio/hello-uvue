<template>
  <view class="page">
    <view class="split-title">button:click</view>
    <button class="toggle" @click="onShowOrHide">show/hide</button>
    <view class="hello" v-show="show">hello</view>
  </view>
</template>

<script lang="ts">
  export default {
    data() {
      return {
        show: true
      }
    },
    methods: {
      onShowOrHide() {
        this.show = !this.show
      }
    }
  }
</script>

